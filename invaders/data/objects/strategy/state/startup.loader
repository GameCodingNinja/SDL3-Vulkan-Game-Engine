<loader>

    <!-- One off Strategy node creation for simple nodes that don't define scripts. Bypasses the need to create a strategy file -->
    <strategy name="_startup_" defaultGroup="(startup)" cmdBufPool="(startup)" activate="true">
    
        <!-- Node name will be used for the object name look up if one isn't defined -->
        <node name="logo">
            <sprite>
                <position z="-20"/>
            </sprite>
        </node>

    </strategy>
  
</loader>
